<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/teal_200">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/banyuwangi_logo"
        android:contentDescription="Logo Banyuwangi"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di Banyuwangi"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_attractions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEMPAT WISATA"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_hidden_gems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEMPAT RAHASIA"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_culinary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KULINER KHAS"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EVENT DAN FESTIVAL"
        android:layout_marginTop="8dp"/>
</LinearLayout>